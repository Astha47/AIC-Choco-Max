# SFU MediaSoup Service Configuration

# Server Configuration
PORT=3000
HOST=0.0.0.0

# MediaSoup Configuration
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_ANNOUNCED_IP=127.0.0.1
MEDIASOUP_MIN_PORT=10000
MEDIASOUP_MAX_PORT=10100

# TURN/STUN Configuration (for NAT traversal)
TURN_SERVERS=stun:stun.l.google.com:19302
TURN_USERNAME=
TURN_PASSWORD=

# Security
SSL_ENABLED=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem

# RTSP Bridge Configuration
RTSP_BRIDGE_ENABLED=true
RTSP_URLS=rtsp://rtsp-server:8554/cam01,rtsp://rtsp-server:8554/cam02,rtsp://rtsp-server:8554/cam03

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/sfu.log

# Room Configuration
MAX_PARTICIPANTS=50
MAX_PRODUCERS=10

# Quality Settings
VIDEO_CODECS=VP8,H264
AUDIO_CODECS=OPUS
