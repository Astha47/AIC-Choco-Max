# YOLOv12 Inference Service Configuration

# RTSP Sources (use zero-padded camera IDs to match camera-dummy)
RTSP_URLS=rtsp://rtsp-server:8554/cam01,rtsp://rtsp-server:8554/cam02,rtsp://rtsp-server:8554/cam03
RTSP_RECONNECT_INTERVAL=5

# YOLOv12 Model
MODEL_PATH=./models/yolov12n.pt
MODEL_CONFIDENCE=0.5
MODEL_IOU_THRESHOLD=0.45
MODEL_DEVICE=cpu
MODEL_IMGSZ=640

# MQTT Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=yolo_inference_service
MQTT_TOPIC_PREFIX=cameras
MQTT_QOS=1

# Database Configuration (MySQL)
DB_ENABLED=false
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=yolo_detections
DB_RECONNECT_INTERVAL=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Performance
MAX_WORKERS=4
FRAME_SKIP=1
INFERENCE_INTERVAL=0.1

# WebRTC/SFU Integration
SFU_ENABLED=true
SFU_HOST=localhost
SFU_PORT=3000
SFU_SSL=false
